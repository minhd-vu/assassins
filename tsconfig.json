{
    "compilerOptions": {
        "jsx": "react-jsx",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "dom",
        ],
        "module": "esnext",
        "target": "es2018",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "outDir": "./built",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "./src/**/*",
        "jest.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}